<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtvIndustria.Views.PageCadastrar" Title="CADASTRAR"  BackgroundColor="LightGray">
    <ContentPage.Content>   
        <StackLayout>
            <Entry x:Name="txtCodigo" IsVisible="False" IsEnabled="False"/>
            <Entry x:Name="txtNome" Keyboard="Default" Placeholder="Nome do Funcionário"/>
            <Entry x:Name="txtSetor" Keyboard="Default" Placeholder="Setor do Funcionário"/>
            <Entry x:Name="txtTurno" Keyboard="Default" Placeholder="Turno do Funcionário (Manhã, Tarde ou Noite)"/>
            <StackLayout Orientation="Horizontal" Margin="20,0,20,0">
                <Button x:Name="btSalvar" Text="Inserir" HorizontalOptions="FillAndExpand" CornerRadius="10" Clicked="btSalvar_Clicked"/>
                <Button x:Name="btExcluir" Text="Excluir" HorizontalOptions="FillAndExpand" CornerRadius="10" IsVisible="False" Clicked="btExcluir_Clicked"/>
                <Button x:Name="btCancelar" Text="Cancelar" HorizontalOptions="FillAndExpand" CornerRadius="10" Clicked="btCancelar_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>