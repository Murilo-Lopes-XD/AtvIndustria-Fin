<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtvIndustria.Views.PagePrincipal" IsPresented="True" BackgroundColor="LightGray">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout Margin="10">
                <Image Source="funcionario2" HorizontalOptions="Center"/>
                <Label Text="SUPERVISÃO" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,50"/>
                <StackLayout Orientation="Horizontal">
                    <Button x:Name="btHome" Text="HOME" HorizontalOptions="FillAndExpand" CornerRadius="10" Clicked="btHome_Clicked"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Image Source="inserir.png"/>
                    <Button x:Name="btCadastrar" Text="Cadastrar" HorizontalOptions="FillAndExpand" CornerRadius="10" Clicked="btCadastrar_Clicked"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Image Source="localizar.png"/>
                    <Button x:Name="btLocalizar" Text="Localizar" HorizontalOptions="FillAndExpand" CornerRadius="10" Clicked="btLocalizar_Clicked"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Image Source="info.png"/>
                    <Button x:Name="btSobre" Text="Sobre" HorizontalOptions="FillAndExpand" CornerRadius="10" Clicked="btSobre_Clicked"/>
                </StackLayout>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage Title="Page Principal">
            <Label x:Name="testeDb" Text=""/>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>